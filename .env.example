# Allowed hosts for Django (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL Database
DB_NAME=sunpeaks_inventory
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Django Admin
ADMIN_USER=admin
ADMIN_PASSWORD=your_admin_password

# Spotify API credentials (for Sonos/Spotify integration)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

#########################
#### Wifi App Settings###
#########################
# Comma-separated list of WiFi networks requiring auth
WIFI_NETWORKS_AUTH=network1,network2
# Comma-separated list of public WiFi networks
WIFI_NETWORKS_PUBLIC=guest_network

# WiFi passwords (key format: WIFI_PASSWORD_FOR_<NETWORK_NAME_UPPERCASED_SPACES_TO_UNDERSCORES>)
WIFI_PASSWORD_FOR_NETWORK1=your_wifi_password
WIFI_PASSWORD_FOR_NETWORK2=your_wifi_password
WIFI_PASSWORD_FOR_GUEST_NETWORK=your_guest_password

###############################
#### Home Assistant Settings###
###############################
HOMEASSISTANT_URL=http://your-ha-ip:8123/
HOMEASSISTANT_ACCESS_TOKEN=your_ha_long_lived_access_token

